grafana:
  adminPassword: "{{ grafana_admin_password | default('admin') }}"
  service:
    type: LoadBalancer
  persistence:
    enabled: false
  defaultDashboardsTimezone: browser

prometheus:
  service:
    type: LoadBalancer
  prometheusSpec:
    retention: 15d
    scrapeInterval: "30s"

alertmanager:
  service:
    type: LoadBalancer

# Можно отключить/включить компоненты, если нужно:
kubeStateMetrics:
  enabled: true

nodeExporter:
  enabled: true

